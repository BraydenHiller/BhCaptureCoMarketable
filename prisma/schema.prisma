generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

enum UserRole {
  MASTER_ADMIN
  TENANT
}

enum UserStatus {
  ACTIVE
  DISABLED
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum BillingStatus {
  PENDING
  ACTIVE
  PAST_DUE
  CANCELED
}

enum TenantDomainStatus {
  PENDING_VERIFICATION
  VERIFIED
  ACTIVE
  DISABLED
}

enum GalleryAccessMode {
  PRIVATE
  PUBLIC
}

enum GalleryProofingStatus {
  PENDING
  SUBMITTED
}

enum SelectionStatus {
  DRAFT
  SUBMITTED
}

model Tenant {
  id                        String         @id @default(cuid())
  name                      String
  slug                      String         @unique
  status                    TenantStatus   @default(ACTIVE)
  billingStatus             BillingStatus  @default(PENDING)
  stripeAccountId           String?        @unique
  stripeOnboardingComplete  Boolean        @default(false)
  storageLimitBytes         BigInt         @default(1073741824)
  storageUsedBytes          BigInt         @default(0)
  storageEnforced           Boolean        @default(true)
  createdAt                 DateTime       @default(now())
  updatedAt                 DateTime       @updatedAt
  memberships               Membership[]
  auditLogs                 AuditLog[]
  users                     User[]
  domain                    TenantDomain?
}

model TenantDomain {
  id                String             @id @default(cuid())
  tenantId          String             @unique
  hostname          String             @unique
  status            TenantDomainStatus @default(PENDING_VERIFICATION)
  verificationToken String             @unique
  txtRecordName     String
  txtRecordValue    String
  verifiedAt        DateTime?
  activatedAt       DateTime?
  disabledAt        DateTime?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  tenant            Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([status])
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  role        UserRole?
  status      UserStatus   @default(ACTIVE)
  cognitoSub  String?      @unique
  tenantId    String?
  memberships Membership[]
  auditLogs   AuditLog[]   @relation("AuditActor")
  tenant      Tenant?      @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([role])
}

model Membership {
  id        String         @id @default(cuid())
  tenantId  String
  userId    String
  role      MembershipRole @default(MEMBER)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  tenant    Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([tenantId])
  @@index([userId])
}

model AuditLog {
  id        String   @id @default(cuid())
  tenantId  String
  actorId   String?
  action    String
  target    String?
  metadata  Json?
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor     User?    @relation("AuditActor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([tenantId, createdAt])
  @@index([actorId, createdAt])
}

model Gallery {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  accessMode         GalleryAccessMode @default(PRIVATE)
  clientUsername     String?
  clientPasswordHash String?
  maxSelections      Int?
  proofingStatus     GalleryProofingStatus @default(PENDING)
  createdAt DateTime @default(now())
  photos    Photo[]
  selections ProofSelection[]

  @@index([tenantId])
  @@index([tenantId, createdAt])
  @@index([accessMode])
}

model ProofSelection {
  id             String          @id @default(cuid())
  tenantId       String
  galleryId      String
  clientUsername String
  status         SelectionStatus @default(DRAFT)
  submittedAt    DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  gallery        Gallery         @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  items          ProofSelectionItem[]

  @@unique([galleryId, clientUsername])
  @@index([tenantId, galleryId])
  @@index([tenantId, status, createdAt])
}

model ProofSelectionItem {
  id          String   @id @default(cuid())
  tenantId    String
  selectionId String
  photoId     String
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  selection   ProofSelection @relation(fields: [selectionId], references: [id], onDelete: Cascade)
  photo       Photo          @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@unique([selectionId, photoId])
  @@index([tenantId, selectionId])
  @@index([tenantId, photoId])
}

model Photo {
  id                String   @id @default(cuid())
  tenantId          String
  galleryId         String
  storageKey        String?
  originalFilename  String?
  mimeType          String?
  bytes             Int?
  width             Int?
  height            Int?
  altText           String?
  caption           String?
  sortOrder         Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  gallery           Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  proofSelectionItems ProofSelectionItem[]

  @@index([tenantId, galleryId])
  @@index([tenantId, createdAt])
}
